body
  font-family "Helvetica Neue","Lucida Grande",Helvetica,Arial,sans-serif

div.brew
  border-radius 8px
  padding 8px
  margin 12px
  max-width 400px
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)

.pot-green
  background-color #DFF0D8
  border-color #D6E9C6
  color #468847

.pot-red
  background-color #F2DEDE
  border-color #EED3D7
  color #B94A48

.pot-blue
  background-color #D9EDF7
  border-color #BCE8F1
  color #3A87AD
