body
  font-family "Helvetica Neue","Lucida Grande",Helvetica,Arial,sans-serif

#bgimage
  position fixed
  z-index -1
  width 100%
  height 95%
  max-width 400px
  background url("../images/coffee_mug.svg") center center no-repeat
  background-size contain
  opacity 0.3

div.brew
  padding 8px
  margin-bottom 10px
  max-width 400px
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
  border-radius 8px
  border-width 2px
  border-style solid

div.brew ul
  margin-top 4px
  margin-bottom 4px
  padding-left 20px

div.brewing
  border-color #FAA732

.pot-green
  background-color rgba(223, 240, 216, 0.9)
  border-color #D6E9C6
  color #468847

.pot-red
  background-color rgba(242, 222, 222, 0.9)
  border-color #EED3D7
  color #B94A48

.pot-blue
  background-color rgba(217, 237, 247, 0.9)
  border-color #BCE8F1
  color #3A87AD

#brew-simple-form button
  width 400px
  max-width 400px
  height 50px
  margin-bottom 10px
  cursor pointer
  border-radius 8px
  border-width 2px
  border-style solid
