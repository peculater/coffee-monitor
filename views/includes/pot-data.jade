- var klass = 'pot-' + pot.color;
.pot(id='pot-#{pot.id}', class=klass,
    data-currentLevel=pot.currentLevel, data-ready=pot.readyAt)
  ul
    li Pot: #{pot.name}
    - var ready = parseInt(pot.readyAt);
    li Fraction full: #{pot.currentLevel} 
    li Ready: #{moment(ready).calendar()} (
      span.ready-relative #{moment(ready).fromNow()}
      | )
